{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        "target": "es2016",
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitOverride": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@application/*": ["src/application/*"],
            "@kernel/*": ["src/kernel/*"],
            "@main/*": ["src/main/*"],
            "@infra/*": ["src/infra/*"],
            "@shared/*": ["src/shared/*"],
            "@domain/*": ["src/domain/*"]
        },
        "plugins": [{ "transform": "typescript-transform-paths" }]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests", "eslint.config.mts"]
    // Exclua o que não é código da aplicação
}
